@model  Error404.Models.StockViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pb-5">
    <form method="post">
        <div class="card">
            <div class="card-header text-info text-center"><h3>Stock Report</h3></div>
            <div class="card-body badge-gradient-dark">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="form-label">Category</label>
                            <input type="text" name="Category" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Start Date</label>
                            <input type="date" name="StartDate" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="form-label">Product</label>
                            <input type="text" name="Product" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">End Date</label>
                            <input type="date" name="EndDate" class="form-control" />
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-success float-right" value="Search" />
            </div>
        </div>
    </form>


    <br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr class="badge-gradient-dark text-white">
                <th>Sl</th>
                <th>Code</th>
                <th>Name</th>
                <th>Category</th>
                <th>ReOrderLevel</th>
                <th>ExpireDate</th>
                <th>OpeningBalance</th>
                <th>In</th>
                <th>Out</th>
                <th>ClosingBalance</th>
            </tr>
        </thead>
        @{
            int i = 1;
        }
        <tbody>
            @foreach (var stock in Model.StockReport)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@stock.Code</td>
                    <td>@stock.Name</td>
                    <td>@stock.Category</td>
                    <td>@stock.ReorderLevel</td>
                    <td>@stock.ExpireDate</td>
                    <td>@stock.OpeningBalance</td>
                    <td>@stock.Inqty</td>
                    <td>@stock.Out</td>
                    <td>@stock.ClosingBalance</td>



                </tr>
            }
        </tbody>
    </table>
</div>




