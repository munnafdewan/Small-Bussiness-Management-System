@model Error404.Models.CustomerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
    <div class="container pb-5">
        <h2 class="text-center">Customer Details</h2>
        <br /><br />
        <form method="post">
            <div class="form-inline my-4">
                <input class="form-control"  type="text" name="SearchString" placeholder="Search By Code , Name or Email" style="width: 87%;border: 1px solid #19BDA5;">
                <input class="btn btn-success" type="submit" value="Search"/>
            </div>
        </form>
        <br />
        @Html.ActionLink("Add", "Add","Customer", null, new { @class = "btn btn-info" })
        <br /><br />
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="badge-gradient-dark text-white">
                    <th>Sl</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Loyality</th>
                    <th>Action</th>
                </tr>
            </thead>
            @{
                int i = 1;
            }
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@customer.Code</td>
                        <td>@customer.Name</td>
                        <td>@customer.Address</td>
                        <td>@customer.Email</td>
                        <td>@customer.Contact</td>
                        <td>@customer.Loyality</td>
                        <td>@Html.ActionLink("Edit", "Edit", "Customer", new { Id = customer.Id }, new { @class="btn btn-danger"})</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

